# Auto detect text files and perform LF normalization
* text=auto

# Audio Formats
*.wav filter=lfs diff=lfs merge=lfs -text

# Image Formats
*.tga filter=lfs diff=lfs merge=lfs -text
*.png filter=lfs diff=lfs merge=lfs -text
*.jpg filter=lfs diff=lfs merge=lfs -text
*.jpeg filter=lfs diff=lfs merge=lfs -text
*.exr filter=lfs diff=lfs merge=lfs -text

# Mesh Formats
*.fbx filter=lfs diff=lfs merge=lfs -text
*.obj filter=lfs diff=lfs merge=lfs -text

# S&box
*.vmap filter=lfs diff=lfs merge=lfs -text
*.vpost_c filter=lfs diff=lfs merge=lfs -text
*.vpk filter=lfs diff=lfs merge=lfs -text
*.dmx filter=lfs diff=lfs merge=lfs -text
*.los filter=lfs diff=lfs merge=lfs -text
*.vcs filter=lfs diff=lfs merge=lfs -text
*.vmdl_c filter=lfs diff=lfs merge=lfs -text
*.vmat_c filter=lfs diff=lfs merge=lfs -text
*.vtex_c filter=lfs diff=lfs merge=lfs -text
*.vsnd_c filter=lfs diff=lfs merge=lfs -text
*.vtex_c filter=lfs diff=lfs merge=lfs -text
*.sound_c filter=lfs diff=lfs merge=lfs -text
*.surface_c filter=lfs diff=lfs merge=lfs -text